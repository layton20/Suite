@page
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model Suite.Pages.Tags.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New @Configuration["Suite:Settings:DefaultThemeColour"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tag[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tag[0].Uid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tag[0].CreatedTimestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tag[0].AmendedTimestamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tag) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedTimestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmendedTimestamp)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
